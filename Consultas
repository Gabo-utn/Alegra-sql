 SELECT
    SUM(ventas.cantidad) total_de_productos_vendidos,
    COUNT(distinct ventas.ventaId) cantidad_de_pedidos,
    YEAR(ventas.fechadeventa) years
    FROM ventas
    GROUP BY YEAR(ventas.fechadeventa);
